public class Project3 {

	public static void main(String[] args) {
		
		Alien2 obj1=new Alien2();
		
		obj1.name="Navin";
		
		obj1.age=30;
		
		obj1.tech="Java";
		
		obj1.show();
		
		Alien2 obj2=new Alien2();
		
		obj2.name="Lohit";
		
		obj2.age=14;
		
		obj2.tech="Blockchain";
		
		obj2.show();
		

	}

}


class Alien2
{
	String name;
	int age=0;
	String tech;
	
	public Alien2()
	{
		System.out.println("In Constructor");
	}
	
	public void show()
	{
		System.out.println("Name "+name + " Age "+age + " Tech "+tech);
	}
}


