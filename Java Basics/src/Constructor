
public class Project2 {

	public static void main(String[] args) {
		
		
		/*
		 * Alien a1; a1=new Alien();
		 * 
		 * a1.show();
		 */
		
		//can also be written in this way
		
		new Alien1().show(); //anonymous object  
		
		
		

	}

}


class Alien1
{

	String name="Navin";
	int age=30;
	String tech="Blockchain";
	
	
	 
	
	public Alien1()
	{
		System.out.println("in constructor");
	}
	public void show()
	{
		System.out.println("in show");
	}
}


